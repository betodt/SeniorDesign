{{yield}}
<div id="login-content">
	<div class="row">
		<form class="col s12" {{action "updateUser" on="submit"}}>
			<div class="row">
				<!-- first name -->
				<div class="input-field col s12">
					<i class="material-icons prefix">perm_identity</i>
					{{input value=first id='first' class="validate" required="" aria-required="true"}}
					<label for="first" data-error="Please enter a valid first name" data-success="valid">First Name</label>
				</div>
				<!-- last name -->
				<div class="input-field col s12">
					<i class="material-icons prefix">perm_identity</i>
					{{input value=last id='last'class="validate"}}
					<label for="last" data-error="Please enter a valid last name" data-success="valid">Last Name</label>
				</div>
				<!-- email -->
				<div class="input-field col s12">
					<i class="material-icons prefix">mail_outline</i>
					{{input value=email id='email' type="email" class="validate"}}
					<label for="email" data-error="Please enter a valid email" data-success="valid">Email</label>
					
				</div>
				<!-- password -->
				<div class="input-field col s12">
					<i class="material-icons prefix">lock_outline</i>
					{{input value=password id='password' class="validate"}}
					<label for="password" data-error="Please enter a valid email" data-success="valid">Password</label>
				</div>
				<!-- confirm password -->
				<div class="input-field col s12">
					<i class="material-icons prefix">lock_outline</i>
					{{input value=passwordConfirm id='passwordConfirm' class="validate"}}
					<label for="passwordConfirm" data-error="Please enter a valid email" data-success="valid">Confirm Password</label>
				</div>
				<div class="center-align">
					<button class="btn waves-effect waves-light deep-purple darken-3" 
					{{action "submit"}}> Submit <i class="material-icons right">send</i>
					</button>
				</div>
			</div>
		</form>
	</div>
</div>

{{#if loginFailed}}
  <div class="alert alert-danger">Invalid username or password.</div>
{{/if}}