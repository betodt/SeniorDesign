<div id="login" class="modal">
  <div class="modal-content">
    <h4 id= "formTitle">Sign Up</h4>
    <div id= "loginContent">
     <div class="center-align"><a class="googleIcon waves-effect waves-blue btn white" {{action "signIn" "google"}}><img class="" src="assets/g-logo.png" alt="google">Sign Up with Google</a></div>
     <div class="center-align"><a class="googleIcon waves-effect waves-blue btn white" {{action "signIn" "facebook"}}>Sign Up with Facebook</a></div>
      <h5><span>or</span></h5>
      <div class="center-align">
        <a class="waves-effect waves-light btn deep-purple darken-3" id= "signupButton"{{action "openForm"}}><i class="material-icons left">mail_outline</i>Sign Up With Email</a>
      </div>
      <div id="signup" class="hide"> 
        <div class="row">
          <form class="col s12">
            <div class="row">
              <!-- first name -->
              <div class="input-field col s12">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">First Name</label>
              </div>
              <!-- last name -->
              <div class="input-field col s12">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Last Name</label>
              </div>
              <!-- email -->
              <div class="input-field col s12">
                <i class="material-icons prefix">mail_outline</i>
                <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Email</label>
              </div>
              <!-- username -->
              <div class="input-field col s12">
                <i class="material-icons prefix">face</i>
                <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Username</label>
              </div>
              <!-- password -->
              <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <input id="icon_prefix" type="text" class="validate">
                <label for="icon_prefix">Password</label>
              </div>
              <div class="center-align">
                <button class="btn waves-effect waves-light deep-purple darken-3" type="submit" name="action" formaction="mockup.html">Submit <i class="material-icons right">send</i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>