{{yield}}
<div id="project-task"> 
	<div class="row">
	    <div class="col s12">
			<div class= "card">
					<div class="card-title teal">
						<form action="#">

							<div class="left-align">
     							<input type="checkbox" class=" checkbox" id="task{{model.id}}"/>
      								<label for="task{{model.id}}" {{action "removeTask" model.id}}><h4 class="white-text">{{model.description}}</h4></label>
      						</div>

    					</form>
    				</div>	

				<div class= "card-content">
					<div class="row">
						<div class="col s12 m12">
							<h5>Due: {{formatted-date model.deadline 'LL'}}</h5>
						</div>
						<div class="col s12 m12">
							<h5> Assigned to: 
								{{#each model.members as |member|}}
									<img class= "hoverable circle responsive-img tooltipped" data-position="top" data-delay="50" data-tooltip="{{member.fullName}}" src="{{member.picUrl}}">  
								{{/each}}
							</h5>
						</div>
						
